{
  "name": "ecommerce-backend",
  "version": "1.0.0",
  "description": "Backend for ecommerce application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --config ../jest.backend.config.js",
    "test:unit": "jest --config ../jest.backend.config.js --testPathPattern='unit'",
    "test:integration": "jest --config ../jest.backend.config.js --testPathPattern='integration'",
    "test:coverage": "jest --config ../jest.backend.config.js --coverage",
    "test:watch": "jest --config ../jest.backend.config.js --watch",
    "test:ci": "jest --config ../jest.backend.config.js --ci --coverage",
    "db:create": "node create-db.js",
    "db:seed": "node seed-db.js",
    "db:verify": "node verify-db.js"
  },
  "keywords": [
    "ecommerce",
    "backend",
    "nodejs",
    "express",
    "postgresql"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "sequelize": "^6.35.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
